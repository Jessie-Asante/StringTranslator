@model StringConverter.Models.ViewModel.GetViewModel
@{

}

<div class="mt-2" style="width:50%">
    <div class="row">
        <h2>Translator</h2>      
        <table id="getText" class="table table-striped">
            <thead>
                <tr> 
                    @*<th>Id</th>*@
                    <th>Translated Text</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var get in Model.TblConvertStrings)
                {
                    <tr>
                      @*  <td>
                            @get.UserIDpk
                        </td>*@
                        <td>
                            @get.DataField
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

@section Scripts  {
    <script>
        $(document).ready(function () {
            $('#getText').DataTable();
        });
    </script>
}